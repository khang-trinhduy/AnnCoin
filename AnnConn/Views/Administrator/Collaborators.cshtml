<div style="text-align:right"><a id="new" asp-action="Create">Đăng ký CTV</a></div>

<span style="display:inline-block;height:5px;"></span>
<hr />
<h4 style="font-family:Calibri; text-align:center">Danh sách CTV</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Họ & tên
            </th>
            <th>
                SĐT
            </th>
            <th>
                Email
            </th>
            <th>
                Thời gian gia nhập
            </th>
            <th>
                Nhóm
            </th>
            <th>
                SL khách cung cấp
            </th>
            <th>
                SL HĐ giữ chỗ
            </th>
            <th>
                Chính sách
            </th>
            <th>
                Mức phí
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int count = 1;}
        @foreach (var item in Model.collaborators)
        {
            <tr>
                <td>
                    @count

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.joinDate)
                </td>
                <td>
                    Chưa rõ
                </td>
                <td>
                    @item.customers.Count
                </td>
                <td>
                    @item.contracts.Count
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.)*@
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.condition)*@
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.cNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ch)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.policy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.charges)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.totals)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a> |
                    <a asp-action="CreateContract" asp-route-id="@item.ID">HĐ</a>
                </td>*@
                <td>
                    <a asp-action="Collabor_Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Collabor_Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Collabor_Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
            count++;
        }
    </tbody>
</table>

<style>
    table, td, th {
        border: 1px solid #ddd;
        text-align: left;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 15px;
    }

    th, td {
        text-align: center;
        vertical-align: middle;
    }

    table {
        color: #333;
        font-family: Helvetica, Arial, sans-serif;
        width: 640px;
        border-collapse: collapse;
        border-spacing: 0;
    }

    td, th {
        border: 3px solid transparent; /* No more visible border */
        height: 30px;
        transition: all 0.3s; /* Simple transition for hover effect */
    }

    th {
        border: 1px solid #1fbe9a;
        background: #1fbe9a;
        font-weight: bold;
        color: white;
    }

    td {
        background: #FAFAFA;
        text-align: center;
    }

    /* Cells in even rows (2,4,6...) are one color */
    tr:nth-child(even) td {
        background: #F1F1F1;
    }

    /* Cells in odd rows (1,3,5...) are another (excludes header cells)  */
    tr:nth-child(odd) td {
        background: #FEFEFE;
    }

    tr td:hover {
        background: #666;
        color: #FFF;
    }

    /*table {
        overflow: hidden;
        display: inline-block;
    }*/

    tr:hover {
        background-color: #faf2de;
    }


    td, th {
        position: relative;
    }

        td:hover::after,
        th:hover::after {
            content: "";
            position: absolute;
            background-color: #1fbe9a;
            left: 0;
            top: -5000px;
            height: 1000px;
            width: 100%;
            z-index: -1;
        }

    #tt {
        text-wrap: normal
    }

        #tt:hover {
            background: white;
            color: #1fbe9a
        }
</style>