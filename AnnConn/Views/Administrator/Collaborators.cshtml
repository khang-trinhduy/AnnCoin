@model AnnConn.Models.Partner

@{
    ViewData["Title"] = "Cộng tác viên";
}
<img title="Annhome-logo" src="~/images/Ann_Logo.png" style="width:340px; height:172px; display:block;margin-left:auto;margin-right:auto;" alt="Annhome Logo" />

<span style="display:block; height:50px"></span>
<div style="display:block; text-align: right"><a id="home" asp-action="Contract">Home</a></div>
<span style="display:inline-block;height:30px;"></span>
